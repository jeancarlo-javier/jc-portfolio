---
export interface Props {
    href: string;
    target?: string;
}

const { href, target="" } = Astro.props;
---

<a
    class:list={[
        "text-gray-500 hover:text-gray-900 transition-colors duration-200",
        "inline-flex items-center",
        "underline underline-offset-4",
    ]}
    href={href}
    target={target}
>
    <slot />
</a>